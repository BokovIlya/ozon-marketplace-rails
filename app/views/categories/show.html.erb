<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Главная", root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Категории", categories_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @category.name %></li>
  </ol>
</nav>

<h1 class="mb-4">Товары в категории: <%= @category.name %></h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @category.products.each do |product| %>
    <div class="col">
      <div class="card h-100">
        <% if product.title.include?('Ноутбук') %>
          <%= image_tag "laptop.jpg", class: "card-img-top" %>
        <% elsif product.title.include?('Звездный Путник') %>
          <%= image_tag "DOOM.jpg", class: "card-img-top" %>
        <% elsif product.title.include?('наушники') %>
          <%= image_tag "7328.jpg", class: "card-img-top" %>
        <% elsif product.title.include?('Кофемашина') %>
          <%= image_tag "1021478317.jpg", class: "card-img-top" %>
        <% elsif product.title.include?('Энциклопедия') %>
          <%= image_tag "0.jpg", class: "card-img-top" %>
        <% else %>
          <%= image_tag "product_placeholder.jpg", class: "card-img-top" %>
        <% end %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">
            <%= link_to product.title, product_path(product), class: "text-decoration-none stretched-link" %>
          </h5>
          <p class="card-text text-muted"><%= truncate(product.description, length: 80) %></p>
          <div class="mt-auto">
            <div class="mb-2">
              <% if product.reviews.any? %>
                <span class="text-warning">★</span> <strong><%= product.average_rating %></strong>
                <small class="text-muted">(<%= product.reviews.count %>)</small>
              <% else %>
                <small class="text-muted">Нет отзывов</small>
              <% end %>
            </div>
            <p class="card-text fs-5"><strong><%= number_to_currency(product.price) %></strong></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>